@model PizzaStoreMVC2.Client.ViewModels.PizzaSiteModel

@{
    ViewBag.Title = "ChooseUser";
}
<h3>Your Current Store is: @Html.LabelFor(m => m.storeString, Model.storeString)</h3>
<h2>ChooseUser</h2>

@using (Html.BeginForm("ChooseUser", "PizzaSite", FormMethod.Post))
{
   <div>
      @Html.DropDownListFor(m => m.userString, Model.UserOptions, new { @class = "btn btn-default dropdown-toggle" })

   </div>

   <div>
      <button type="submit" class="btn btn-primary"> Select User</button>
   </div>
}


